pipeline {
  agent any
    stages {
      stage('Build'){
        steps('checkout git') {
          echo 'pulling project from git ...';
          git branch : 'khalil_romdhani',
          url : 'https://github.com/romdhanikhalil16/achat'
        }
      }
      stage('Maven') {
            steps {
                echo 'building project ...';
                sh 'mvn clean compile install',
            }
        }

      stage('Test with Mockito and JUnit') {
            steps {
                echo 'Testing project ...';
                sh 'mvn test'
            }
        }
      stage('SonarQube') {
            steps {
                echo 'Code Quality Testing (sonar) ...';
                sh 'mvn sonar:sonar -Dsonar.login=admin -Dsonar.password=sonar'
            }
    }
      stage('NEXUS') {
            steps {
                echo 'deploying project...';
                sh 'mvn deploy'
            }
        }
      stage('Docker Build IMAGE') {
            steps {
                //sh 'docker build -t ahmedkhachlouf/achat-devops:1.0.0 .'
            }
        }
      stage('Docker Deploy IMAGE') {
            steps {
                //sh 'docker login -u ahmedkhachlouf -p 223AMT0661'
                //sh 'docker push ahmedkhachlouf/achat-devops:1.0.0'
 
             }
         }
         stage('Docker Compose') {
            steps {
                //sh 'docker-compose up -d'
 
             }
         }
  }

